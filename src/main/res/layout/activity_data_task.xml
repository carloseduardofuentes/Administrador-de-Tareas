<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_data_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.treming.task.Global.DataTaskActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textViewTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Task"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:background="?attr/colorButtonNormal" />


    <TextView
        android:id="@+id/textViewState"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTask"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPriority"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewState"
        android:text="TextView"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textViewDateInit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewState"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDateEnd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewDateInit"
        android:layout_alignBottom="@+id/textViewDateInit"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textStyle="bold" />
</RelativeLayout>
